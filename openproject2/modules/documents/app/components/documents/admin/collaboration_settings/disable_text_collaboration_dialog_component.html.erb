    dialog.with_confirmation_message do |message|
      message.with_heading(tag: :h2) do
        I18n.t("documents.admin.disable_text_collaboration_dialog.heading")
      end

      message.with_description_content(
        I18n.t("documents.admin.disable_text_collaboration_dialog.confirmation_message")
      )
    end

    dialog.with_confirmation_check_box_content(
      I18n.t("documents.admin.disable_text_collaboration_dialog.confirmation_checkbox_message")
    )
  end
