  render(
    Primer::OpenProject::DangerDialog.new(
      id: "disable-text-collaboration-dialog",
      title: I18n.t("documents.admin.disable_text_collaboration_dialog.title"),
      confirm_button_text: I18n.t(:button_disable),
      form_arguments: {
        action: admin_settings_document_collaboration_settings_path,
        method: :delete,
        data: { turbo: true }
