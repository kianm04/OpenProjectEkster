<%=
  render(Primer::OpenProject::SubHeader.new(data: sub_header_data_attributes)) do |subheader|
    subheader.with_filter_input(
      name: :title,
      label: I18n.t("documents.subheader.filter.label"),
      value: filter_input_value,
      placeholder: I18n.t("documents.subheader.filter.placeholder"),
      leading_visual: {
        icon: :search,
        size: :small
      },
      clear_button_id: clear_button_id,
      data: filter_input_data_attributes
    )

    if can_add_document?
      subheader.with_action_button(
        scheme: :primary,
        leading_icon: :plus,
        label: I18n.t(:label_document_new),
        tag: :a,
        **new_document_path_options
      ) do
        I18n.t("activerecord.models.document")
      end
    end
  end
%>
