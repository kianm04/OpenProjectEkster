<%=
  component_wrapper do
    primer_form_with(
      id: "move-to-section-form",
      model: @agenda_item,
      method: :post,
      url: move_to_section_meeting_agenda_item_path(
        @agenda_item.meeting,
        @agenda_item,
        collapsed: @collapsed
      )
    ) do |f|
      flex_layout(mb: 3) do |flex|
        flex.with_row do
          if @base_errors&.any?
            render(Primer::Alpha::Banner.new(mb: 3, icon: :stop, scheme: :danger)) { @base_errors.join("\n") }
          end
        end
        flex.with_row(mb: 3) do
          render(Meeting::AddToSection.new(f, wrapper_id: "move-to-section-dialog", occurrence: @meeting, item: @agenda_item))
        end
      end
    end
  end
%>
