<% helpers.content_controller "keep-scroll-position",
                              keep_scroll_position_url_value: polymorphic_path([@project, :meetings]) %>

<%= render(Primer::OpenProject::PageHeader.new) do |header|
      header.with_title { page_title }
      header.with_breadcrumbs(breadcrumb_items, selected_item_font_weight: section_present? ? :normal : :bold)

      if Setting.ical_enabled?
        header.with_action_menu(
          menu_arguments: { anchor_align: :end },
          button_arguments: { icon: "kebab-horizontal", "aria-label": t(:label_more), data: { "test-selector": "meeting-more" } }
        ) do |menu|
          menu.with_item(
            label: t("label_subscribe_icalendar"),
            href: dialog_my_access_tokens_path(token_type: Token::ICalMeeting.model_name.element),
            content_arguments: { data: { turbo_stream: true } }
          ) do |item|
            item.with_leading_visual_icon(icon: :rss)
          end
        end
      end
    end %>
