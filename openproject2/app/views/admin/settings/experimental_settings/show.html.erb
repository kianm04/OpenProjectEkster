<% html_title t(:label_administration), t(:label_experimental) %>

<%=
  render(Primer::OpenProject::PageHeader.new) do |header|
    header.with_title { t(:label_experimental) }
    header.with_breadcrumbs(
      [{ href: admin_index_path, text: t("label_administration") },
       { href: admin_settings_general_path, text: t(:label_system_settings) },
       t(:label_experimental)]
    )
  end
%>

<%=
  settings_primer_form_with(
    url: admin_settings_experimental_path,
    scope: :settings,
    method: :patch
  ) do |f|
%>
  <%=
    render(Primer::Beta::Subhead.new) do |component|
      component.with_heading(tag: :h3, size: :medium) { t("settings.experimental.feature_flags") }
    end
  %>
  <%=
    render(Primer::Alpha::Banner.new(scheme: :warning, mb: 2)) { t("settings.experimental.warning_toast") }
  %>
  <%=
    render(
      Primer::Forms::FormList.new(
        Admin::Settings::ExperimentalSettingsForm.new(f),
        Admin::Settings::Save.new(f, data: { turbo_confirm: t("settings.experimental.save_confirmation") })
      )
    )
  %>
<% end %>
