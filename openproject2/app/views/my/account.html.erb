<% html_title(t(:label_my_account), t(:label_account)) -%>

<%=
  render(Primer::OpenProject::PageHeader.new) do |header|
    header.with_title { t(:label_account) }
    header.with_breadcrumbs(
      [{ href: my_account_path, text: t(:label_my_account), skip_for_mobile: true },
       t(:label_account)]
    )

    if Setting.users_deletable_by_self?
      header.with_action_button(
        tag: :a,
        scheme: :danger,
        mobile_icon: :trash,
        mobile_label: t("account.delete"),
        size: :medium,
        href: delete_my_account_info_path,
        data: { controller: "async-dialog" },
        aria: { label: I18n.t(:button_delete) },
        title: I18n.t(:button_delete),
        test_selector: "delete-my-account-button"
      ) do |button|
        button.with_leading_visual_icon(icon: :trash)
        t(:button_delete)
      end
    end
  end
%>

<%= error_messages_for "user" %>

<%=
  settings_primer_form_with(
    model: @user,
    url: { action: "update_account" },
    lang: current_language,
    data: password_confirmation_data_attribute(
      { turbo: false,
        test_selector: "my-account-form" }
    )
  ) do |form|
    render(
      Primer::Forms::FormList.new(
        My::AccountForm.new(form, user: @user),
        My::CustomFieldsForm.new(form),
        My::AccountSubmitForm.new(form)
      )
    )
  end
%>
