<%=
  render(
    Primer::OpenProject::DangerDialog.new(
      id:,
      classes: "Overlay--size-large-portrait",
      size: :xlarge,
      title:,
      form_arguments: {
        action: user_path(@user),
        method: :delete,
        data: password_confirmation_data_attribute({ turbo: true })
      }
    )
  ) do |dialog|
    dialog.with_confirmation_message(icon_arguments: { icon: :trash }) do |message|
      message.with_heading(tag: :h2) { heading }
      message.with_description do
        flex_layout do |flex|
          flex.with_row(mb: 3, text_align: :center) do
            render Primer::Beta::Text.new(color: :muted) do
              I18n.t("account.deletion_info.login_consequences.#{user_scope}")
            end
          end
          flex.with_row(text_align: :center) do
            render Primer::Beta::Text.new(color: :muted) do
              I18n.t("account.deletion_info.data_consequences.#{user_scope}")
            end
          end
          flex.with_row(text_align: :center) do
            helpers.angular_component_tag "opce-custom-modal-overlay"
          end
        end
      end
    end

    dialog.with_confirmation_check_box_content(I18n.t("text_permanent_delete_confirmation_checkbox_label"))
  end
%>
