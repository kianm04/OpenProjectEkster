<%=
  render(
    Primer::Alpha::Dialog.new(
      id: "new-enterprise-token-dialog",
      title: I18n.t("admin.enterprise.create_dialog.title"),
      size: :medium_portrait,
      data: { "keep-open-on-submit": true }
    )
  ) do |dialog|
    dialog.with_header(variant: :large)
    dialog.with_body do
      render(
        Admin::EnterpriseTokens::FormComponent.new(@token)
      )
    end

    dialog.with_footer do
      component_collection do |modal_footer|
        modal_footer.with_component(
          Primer::Beta::Button.new(
            data: { "close-dialog-id": "new-enterprise-token-dialog" }
          )
        ) do
          I18n.t(:button_cancel)
        end

        modal_footer.with_component(
          Primer::Beta::Button.new(
            scheme: :primary,
            form: "enterprise-token-form",
            data: { turbo: true },
            type: :submit
          )
        ) do
          I18n.t(:button_add)
        end
      end
    end
  end
%>
