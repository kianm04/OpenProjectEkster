<%=
  render(
    Primer::Alpha::Dialog.new(
      id: "onboarding-video-dialog",
      data: {
        controller: "media-dialog"
      },
      title:,
      classes: "Overlay--size-large-portrait",
      size: :xlarge
    )
  ) do |dialog|
    dialog.with_header(variant: :large)
    dialog.with_body do
      component_collection do |body|
        body.with_component(
          render(Primer::Beta::Text.new) { I18n.t("onboarding.text_getting_started_description") }
        )
        body.with_component(
          render(Primer::BaseComponent.new(tag: :div, classes: "onboarding--video")) do
            render(
              Primer::BaseComponent.new(
                my: 2,
                tag: :video,
                height: "430",
                width: "100%",
                controls: true,
                preload: "none",
                allowfullscreen: true,
                data: { "media-dialog-target": "video" }
              )
            ) do
              render(
                Primer::BaseComponent.new(
                  tag: :source,
                  src: video_src,
                  type: "video/mp4"
                )
              )
            end
          end
        )
      end
    end

    dialog.with_footer do
      render(
        Primer::Beta::Button.new(
          data: { "close-dialog-id": "onboarding-video-dialog" }
        )
      ) do
        I18n.t(:button_close)
      end
    end
  end
%>
