<%= component_wrapper(**@container_arguments) do %>
  <%= page_header %>

  <%= grid_layout("step-wizard", tag: :div) do |page| %>
    <%= page.with_area("content", **@content_arguments) do %>
      <%= wizard_content %>
    <% end %>

    <%= page.with_area("footer") do %>
      <%= footer %>
    <% end %>
  <% end %>
<% end %>
