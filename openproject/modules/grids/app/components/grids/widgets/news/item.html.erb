<%=
  render(Primer::Box.new(classes: "news-widget-item")) do
    component_collection do |body|
      body.with_component(
        flex_layout(flex_wrap: :wrap) do |layout|
          unless project
            layout.with_column do
              render(
                Primer::Beta::Link.new(
                  font_weight: :bold,
                  mr: 1,
                  classes: "news-widget-item--project",
                  href: project_path(item.project)
                )
              ) { "#{item.project.name}:" }
            end
          end

          layout.with_column do
            render(Primer::Beta::Link.new(font_weight: :bold, href: news_path(item))) { item.title }
          end
        end
      )
      body.with_component(
        render(Primer::Beta::Text.new(tag: :p, color: :subtle)) { helpers.authoring_at(format_time(item.created_at), item.author) }
      )
      body.with_component(
        render(Primer::Beta::Text.new) { item.summary }
      )
    end
  end
%>
