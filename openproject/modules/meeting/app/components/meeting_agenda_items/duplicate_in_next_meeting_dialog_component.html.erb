<%=
  render(Primer::OpenProject::FeedbackDialog.new(id: dialog_id, title: title)) do |dialog|
    dialog.with_show_button { title }
    dialog.with_feedback_message(icon_arguments: { icon: :none }) do |message|
      message.with_heading(tag: :h2).with_content(title)
      message.with_description_content(confirmation_message)
    end
    dialog.with_footer do
      concat(
        render(
          Primer::Beta::Button.new(
            "data-close-dialog-id": dialog_id
          )
        ) { I18n.t(:button_cancel) }
      )
      concat(
        render(
          Primer::Beta::Button.new(
            tag: :a,
            scheme: :primary,
            href: duplicate_in_next_meeting_agenda_item_path(
              @agenda_item.meeting,
              @agenda_item,
              datetime: @datetime
            ),
            data: {
              turbo_method: :post,
              turbo_stream: true
            }
          )
        ) { I18n.t(:button_duplicate) }
      )
    end
  end
%>
