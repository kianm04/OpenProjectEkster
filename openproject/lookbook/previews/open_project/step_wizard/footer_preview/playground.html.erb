<%=
  render(StepWizard::FooterComponent.new(form_identifier: "my-form", total_steps:, current_step:)) do |footer|
    footer.with_back_button(href: "back_path") if show_back_button
    footer.with_cancel_button(href: "cancel_path") if show_cancel_button
    footer.with_continue_button(href: "next_path")
    footer.with_submit_button(href: "submit_path")
    footer.with_progress_bar if show_progress_bar
  end
%>
