<% html_title t(:label_administration), t(:label_repository_plural) %>

<%=
  render(Primer::OpenProject::PageHeader.new) do |header|
    header.with_title { t(:label_repository_plural) }
    header.with_breadcrumbs(
      [{ href: admin_index_path, text: t("label_administration") },
       { href: admin_settings_general_path, text: t(:label_system_settings) },
       t(:label_repository_plural)]
    )
  end
%>

<%=
  settings_primer_form_with(
    url: admin_settings_repositories_path,
    scope: :settings,
    method: :patch,
    data: {
      controller: "disable-when-checked show-when-checked",
      disable_when_checked_reversed_value: true,
      show_when_checked_visibility_class: "d-none"
    }
  ) do |f|
%>
  <%= render(Admin::Settings::RepositoriesSettingsForm.new(f)) %>

  <%= render partial: "repositories_checkout", locals: { f: } %>

  <%=
    render(Primer::Beta::Subhead.new(mt: 3)) do |component|
      component.with_heading(tag: :h3, size: :medium) { t(:text_work_packages_ref_in_commit_messages) }
    end
  %>

  <%=
    render(
      Primer::Forms::FormList.new(
        Admin::Settings::RepositoriesSettings::CommitMessagesForm.new(f),
        Admin::Settings::Save.new(f)
      )
    )
  %>
<% end %>
