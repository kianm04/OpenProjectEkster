<% title = new_workspace_title(@new_project, @template) %>
<% html_title title %>

<!-- not using with_enterprise_banner_guard so that dismissible banner doesn't interfere with step wizard layout -->
<% if portfolio_management_feature_missing? %>
  <%= render partial: "new_header", locals: { title: } %>
  <%=
    # not using with_enterprise_banner_guard so that dismissible banner doesn't interfere with step wizard layout
    render EnterpriseEdition::BannerComponent.new(
      :portfolio_management,
      variant: :large,
      image: "enterprise/portfolio-management.png"
    )
  %>
<% else %>
  <%= render(StepWizard::PageLayoutComponent.new) do |layout| %>
    <%=
      layout.with_page_header do
        render partial: "new_header", locals: { title: }
      end
    %>

    <%= layout.with_wizard_content do %>
      <% case params[:step] %>
      <% when 1 %>
        <%= render(Primer::Beta::Text.new(tag: :div, mb: 3, font_size: 5)) { I18n.t("create_#{@new_project.workspace_type}.template_heading") } %>
        <%=
          render Projects::TemplateSelectComponent.new(
            project: @new_project,
            template: @template,
            parent: @parent,
            current_user:
          )
        %>
      <% when 2 %>
        <%=
          render Projects::NewComponent.new(
            project: @new_project,
            template: @template,
            step: 2
          )
        %>
      <% when 3 %>
        <%= render(Primer::Beta::Text.new(tag: :div, mb: 3, font_size: 5)) { I18n.t("create_project.attributes_heading") } %>
        <%=
          render Projects::NewComponent.new(
            project: @new_project,
            template: @template,
            step: 3
          )
        %>
      <% end %>
    <% end %>
    <%=
      layout.with_footer do
        render Projects::ProjectCreationFooterComponent.new(
          form_identifier: "project-create-form",
          project: @new_project,
          template: @template,
          current_step: params.fetch(:step, 1).to_i
        )
      end
    %>
  <% end %>
<% end %>
