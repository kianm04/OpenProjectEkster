<%=
  render(
    Primer::Alpha::Dialog.new(
      id: "enterprise-trial-dialog",
      title: t(".title"),
      size: :medium_portrait,
      data: { "keep-open-on-submit": true }
    )
  ) do |dialog|
    dialog.with_header(variant: :large)
    dialog.with_body do
      render(EnterpriseTrials::FormComponent.new(model))
    end

    dialog.with_footer do
      component_collection do |modal_footer|
        modal_footer.with_component(
          Primer::Beta::Button.new(
            data: { "close-dialog-id": "enterprise-trial-dialog" }
          )
        ) do
          I18n.t(:button_cancel)
        end

        modal_footer.with_component(
          Primer::Beta::Button.new(
            scheme: :primary,
            form: "enterprise-trial-form",
            type: :submit
          )
        ) do
          I18n.t(:button_continue)
        end
      end
    end
  end
%>
