<%=
  render Primer::OpenProject::PageHeader.new do |header|
    header.with_title { I18n.t("settings.project_initiation_request.name.options.project_initiation_request") }
    header.with_description { I18n.t("settings.project_initiation_request.header_description") }
    header.with_breadcrumbs(
      [{ href: project_overview_path(@project.id), text: @project.name },
       { href: project_settings_general_path(@project.id), text: I18n.t("label_project_settings") },
       I18n.t("settings.project_initiation_request.name.options.project_initiation_request")]
    )

    enabled = @project.project_creation_wizard_enabled
    label = I18n.t(:button_disable)

    if enabled
      header.with_action_button(
        scheme: :danger,
        mobile_icon: nil,
        mobile_label: label,
        aria: { label: },
        title: label,
        tag: :a,
        href: helpers.disable_dialog_project_settings_creation_wizard_path(@project),
        data: {
          controller: "async-dialog"
        }
      ) { label }
    end

    if @project.project_creation_wizard_enabled
      header.with_tab_nav(label: nil) do |tab_nav|
        tab_nav.with_tab(
          selected: params[:tab] == "name" || params[:tab].blank?,
          href: helpers.project_settings_creation_wizard_path(@project, tab: :name)
        ) do |t|
          t.with_text { I18n.t(:label_name) }
        end

        tab_nav.with_tab(
          selected: params[:tab] == "attributes",
          href: helpers.project_settings_creation_wizard_path(@project, tab: :attributes)
        ) do |t|
          t.with_text { I18n.t(:label_project_attribute_plural) }
        end

        tab_nav.with_tab(
          selected: params[:tab] == "submission",
          href: helpers.project_settings_creation_wizard_path(@project, tab: :submission)
        ) do |t|
          t.with_text { I18n.t(:label_request_submission) }
        end

        tab_nav.with_tab(
          selected: params[:tab] == "export",
          href: helpers.project_settings_creation_wizard_path(@project, tab: :export)
        ) do |t|
          t.with_text { I18n.t("projects.settings.creation_wizard.export.label_artifact_export") }
        end
      end
    end
  end
%>
