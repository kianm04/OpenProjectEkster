<%= component_wrapper(class: "op-admin-settings-form-wrapper") do %>
  <%=
    render(
      Primer::Forms::ToggleSwitchForm.new(
        name: "set_template",
        label: t("project.template.make_template"),
        src: toggle_template_project_settings_template_path(@project),
        csrf_token: form_authenticity_token,
        status_label_position: :start,
        checked: @project.templated?,
        data: { turbo: true },
        mb: 3
      )
    )
  %>

  <% if @project.templated? %>
    <%=
      primer_form_with(
        url: project_settings_template_path(@project),
        method: :patch
      ) do |f|
        render Projects::Settings::TemplateExcludedRolesForm.new(f, project: @project)
      end
    %>
  <% end %>
<% end %>
